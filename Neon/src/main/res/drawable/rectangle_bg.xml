        <shape>
            <corners android:radius="20dp"/>
            <gradient android:endColor="@color/orange" android:startColor="@color/orange" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="20dp"/>
            <gradient android:endColor="@color/grey_light" android:startColor="@color/grey_light" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <gradient android:endColor="@color/grey_light" android:startColor="@color/grey_light" />
        </shape>
    </item>
</selector>