<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/com.scanlibrary"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <RelativeLayout
        android:id="@+id/lay_actionbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/tranparent_black"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/image_review_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/action_bar_title_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/image_review_toolbar_doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/done"
            android:textColor="@color/action_bar_title_color"
            android:textSize="24sp" />


    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>